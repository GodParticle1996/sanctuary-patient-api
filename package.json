{
  "name": "sanctuary-api",
  "version": "0.1.0",
  "description": "Sanctuary API",
  "main": "dist",
  "scripts": {
    "dev": "nodemon -w src --exec \"babel-node src\"",
    "migrate": "node -r dotenv/config ./node_modules/knex/bin/cli.js migrate:latest",
    "lint": "eslint .",
    "build": "babel src -s -D -d dist",
    "start": "pm2-dev --interpreter babel-node src",
    "start:dev": "npm run migrate && npm start",
    "test": "mocha 'src/**/*.test.js' --require esm",
    "coverage": "nyc npm test",
    "serve": "pm2 start dist",
    "seed": "node -r dotenv/config ./node_modules/knex/bin/cli.js seed:run"
  },
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "body-parser": "^1.13.3",
    "compression": "^1.5.2",
    "cors": "^2.7.1",
    "dotenv": "^8.2.0",
    "express": "^4.13.3",
    "express-jwt": "^6.0.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.10",
    "moment": "^2.24.0",
    "morgan": "^1.8.0",
    "mustache": "^3.1.0",
    "mysql": "^2.1.0",
    "node-cron": "^2.0.3",
    "pm2": "^4.2.3",
    "resource-router-middleware": "^0.6.0",
    "twilio": "^3.39.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.7.6",
    "babel-eslint": "^10.1.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-plugin-mocha": "^8.0.0",
    "mocha": "^8.1.1",
    "node-random-name": "^1.0.1",
    "nyc": "^15.1.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    },
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ],
    "overrides": [
      {
        "files": [
          "./src/**/*.js"
        ],
        "parser": "babel-eslint",
        "parserOptions": {
          "babelOptions": {
            "configFile": "./babel.config.js"
          }
        }
      }
    ],
    "plugins": [
      "mocha"
    ]
  }
}
